#!/bin/bash

if [[ ! $2 ]];then
    echo "Usage: vbc-check <env> <command>"
    exit
fi

if [[ ${2:0:1} == "@" ]];then
    book=./vagbook/${VAGBOOK_MASTER}/${2:1}.yml
else
    book=./vagbook/${2}.yml
fi

hosts=./vagbook/hosts.${1}

# debug
echo "sudo -i -u ${VAGBOOK_MASTER} ansible-playbook --check -i $hosts $book"

sudo -i -u ${VAGBOOK_MASTER} ansible-playbook --check -i $hosts $book
